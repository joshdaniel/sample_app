<%= form_for(@micropost) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_area :content, placeholder: "Compose new micropost...",
                      :onkeyup => "javascript:document.getElementById('micropost_length').innerHTML = 140 - this.value.length;"%>
    </div>
    <div><span id=micropost_length style="white-space:nowrap;display:inline">140</span> characters left</div>
    <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>

